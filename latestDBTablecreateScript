CREATE TABLE account
(
    acc_id serial not null,
    acc_type integer NOT NULL,
    username varchar  NOT NULL,
    email varchar NOT NULL,
    password varchar NOT NULL,
    CONSTRAINT account_pkey PRIMARY KEY (acc_id)
)

CREATE TABLE college
(
    college_id serial,
    college_name varchar NOT NULL,
    CONSTRAINT college_pkey PRIMARY KEY (college_id)
)

CREATE TABLE admin_acc
(
    admin_id integer NOT NULL,
    fname varchar NOT NULL,
    lname varchar NOT NULL,
    college integer NOT NULL,
    contact varchar NOT NULL,
    CONSTRAINT admin_acc_admin_id_fkey FOREIGN KEY (admin_id)
        REFERENCES public.account (acc_id) MATCH SIMPLE
        ON UPDATE NO ACTION
        ON DELETE NO ACTION,
    CONSTRAINT admin_acc_college_fkey FOREIGN KEY (college)
        REFERENCES public.college (college_id) MATCH SIMPLE
        ON UPDATE NO ACTION
        ON DELETE NO ACTION
)

CREATE TABLE user_acc
(
    user_id integer NOT NULL,
    fname varchar not null,
    lname varchar not null,
    contact varchar not null,
    CONSTRAINT user_acc_pkey PRIMARY KEY (user_id)
)

CREATE TABLE venue
(
    venue_id serial not null,
    college_id integer NOT NULL,
    capacity integer NOT NULL,
    rate integer NOT NULL,
    equipment varchar,
    venue_name varchar NOT NULL,
    CONSTRAINT venue_pkey PRIMARY KEY (venue_id),
    CONSTRAINT venue_college_id_fkey FOREIGN KEY (college_id)
        REFERENCES public.college (college_id) MATCH SIMPLE
        ON UPDATE NO ACTION
        ON DELETE NO ACTION
)

CREATE TABLE events
(
	organizer_id int not null,
	venue_id int references venue(venue_id) not null,
	event_id serial not null primary key,
	event_name varchar not null,
	event_desc varchar,
	event_tags varchar,
	event_date date not null,
	event_time time,
	expected_participants int
)

